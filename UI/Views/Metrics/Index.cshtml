@using UI.Data.ViewModels
@model IEnumerable<MetricsViewModel>

<h2>Metrics</h2>

<table class="table">
    <thead>
        <tr>
            <th>Metric Name</th>
            <th>Value</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var metric in Model)
        {
            <tr>
                <td>@metric.MetricName</td>
                <td>@metric.Value</td>
                <td>@metric.Timestamp</td>
            </tr>
        }
    </tbody>
</table>
