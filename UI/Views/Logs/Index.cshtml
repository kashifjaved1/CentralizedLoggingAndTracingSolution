@using UI.Data.ViewModels
@model IEnumerable<LogViewModel>

<h2>Logs</h2>

<table class="table">
    <thead>
        <tr>
            <th>Log ID</th>
            <th>Request ID</th>
            <th>Message</th>
            <th>Log Level</th>
            <th>Timestamp</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.RequestId</td>
                <td>@log.Message</td>
                <td>@log.LogLevel</td>
                <td>@log.Timestamp</td>
                <td><a href="@Url.Action("Details", new { requestId = log.RequestId })">View Details</a></td>
            </tr>
        }
    </tbody>
</table>
